<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.itheima.recycler.widget.RecyclerViewHeader
        android:id="@+id/itheima_recycerview_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top">

        <FrameLayout
            android:id="@+id/itheima_content_header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </org.itheima.recycler.widget.RecyclerViewHeader>

    <org.itheima.recycler.widget.ItheimaRecyclerView
        android:id="@+id/itheima_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top"/>
</FrameLayout>